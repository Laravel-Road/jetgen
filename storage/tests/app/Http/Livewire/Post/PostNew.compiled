<?php

namespace App\Http\Livewire\Post;

use App\Models\Post;
use Livewire\Component;

class PostNew extends Component
{
    public Post $newPost;

    public function mount(Post $post)
    {
        $this->newPost = $post;
    }

    public function store()
    {
        $this->validate();

        $this->newPost->save();

        $this->newPost = new Post();

        $this->emit('created');
    }

    protected function rules()
    {
        return [
            //
        ];
    }
}